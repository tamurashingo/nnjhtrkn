scrlrg:
	lda	screnb
	lsr	a
	bcs	scrmrt
	lda	#0
	sta	screnb
	lda	scrolh
	clc
	adc	#low (60*8)
	tax
	lda	scrole
	adc	#high (60*8)
	sta	crsptr
	sta	wrtptr
	cmp	#ARELEN
	bcs	scrmrt
;
	txa
	lsr	wrtptr
	ror	a
	lsr	a
	lsr	a
	sta	wrtptr
;
	and	#$1f
	bne	scrmv0
	lda	area
	asl	a
	asl	a
	asl	a
	asl	a
	clc
	adc	crsptr
	tay	
	lda	areadt,y
	jsr	newpic
scrmv0:	lda	wrtptr
	and	#3
	bne	crsnon
	lda	#2
	sta	screnb	;color expand ok
crsnon:	lda	screnb
	ora	#1
	sta	screnb
scrmrt:	rts
;
fscrst:
	lda	scrole
	sta	crsptr
	and	#1
	asl	a
	asl	a
	asl	a
	asl	a
	asl	a		
	sta	wrtptr
	lda	#60
	sta	cc
;
scrstl:
	lda	wrtptr
	and	#$1f
	bne	fscssk
	lda	area
	asl	a
	asl	a
	asl	a
	asl	a
	clc
	adc	crsptr
	tax
	lda	areadt,x
	jsr	newpic
	inc	crsptr
;
fscssk:	lda	wrtptr
	and	#$3
	bne	fscskp
	jsr	ITARC2
	jsr	clonpt
;
fscskp:	jsr	ITAREC
	jsr	olnput
;
	inc	wrtptr
	lda	wrtptr
	and	#$3f
	sta	wrtptr
	dec	cc
	bne	scrstl
	rts
;
;
;
olnput:	; one line chr. put
;
	lda	wrtptr
	and	#$1f	
	clc
	adc	#$80
	tax
	ldy	#$20
	lda	wrtptr
	and	#$20
	beq	scsssk	
	ldy	#$24
scsssk:	tya
	jsr	setadr
;
	lda	creg0m
	ora	#$04
	sta	creg0
	ldy	#256-24		;$0
;
olnplp:	lda	ITABUF-256+24,y	;[olpadr],y
	sta	vramdt
	iny
;	cpy	#24	;24	;16
	bne	olnplp	;	bcc	olnplp
;
	lda	creg0m
	sta	creg0
	lda	#0
	sta	indexr+1
	lda	wrtptr	;windst
	and	#$3f
	sta	indexr+0
	asl	a	
	clc
	adc	indexr+0
	asl	a
	rol	indexr+1
	clc
	adc	#low gamen
	sta	indexr+0
	lda	#high gamen
	adc	indexr+1
	sta	indexr+1
;
	ldy	#5
gamrec:	;gamen atr get
	lda	ITABUF+30,y
	sta	[indexr],y
	dey
	bpl	gamrec

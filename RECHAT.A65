;
CHRSFT	MACRO
	DEC	CHRBIT
	BPL	?%K
	PHA
	LDA	#7
	STA	CHRBIT
	LDA	[CHRBP],Y
	STA	CHRSFD
	PLA
	INY
	BNE	?%K
	INC	CHRBP+1
?%K:	ASL	CHRSFD
	ENDM
;
MAPSFT	MACRO
	DEC	MAPBIT
	BPL	?%K
	PHA
	LDA	#7
	STA	MAPBIT
	LDA	[MAPBP],Y
	STA	MAPSFD
	PLA
	INY
?%K:	ASL	MAPSFD
	ENDM
;
COLSFT	MACRO
	DEC	COLBIT
	BPL	?%K
	PHA
	LDA	#7
	STA	COLBIT
	LDA	[COLBP],Y
	STA	COLSFD
	PLA
	INY
?%K:	ASL	COLSFD
	ENDM
;
;
ITAREC:
;
;CHR
;
	LDY	CHRBYT
	LDX	#(256-24)
	LDA	#$9F
;
ITARCL:	CHRSFT
	BCC	ITAB0
;
	LDA	#$04
ITAGDL:	CHRSFT
	ROL	A
	BCC	ITAGDL
	ADC	#$5F	;ADD #$60   ( CARRY = ALWAYS 1 )
;
ITAB0:	STA	ITABUF-256+24,X
	INX
	BNE	ITARCL
;
	STY	CHRBYT
;
;
;MAP
;
	LDY	MAPBYT
	MAPSFT
	BCS	ITAMGO
	JMP	ITAACD
;
ITAMGO:	LDA	#$01
	LDX	#5
ITAMFL:	STA	ITABUF+30,X
	DEX
	BPL	ITAMFL
;
	LDX	#(256-6)
ITAM1L:	MAPSFT
	BCS	ITAM2
;
	MAPSFT
	ROL	ITABUF+30-256+6,X
	MAPSFT
	ROL	ITABUF+30-256+6,X
	BCC	ITAM1L
	INX
	BNE	ITAM1L
	JMP	ITAACD
;
ITAM2:	LDA	#$08
ITAM2A:	MAPSFT
	ROL	A
	BCC	ITAM2A
	STA	ITACOU
	LDA	#0
	MAPSFT
	ROL	A
	MAPSFT
	ROL	A
	ROR	A
	ROR	A
	ROR	A
	STA	ITADAT
;
ITAM2B:	LDA	ITADAT
	ROL	A
	ROL	ITABUF+30-256+6,X
	ROL	A
	ROL	ITABUF+30-256+6,X
	BCC	ITAM2C
	INX
	BEQ	ITAACD
ITAM2C:	DEC	ITACOU
	BNE	ITAM2B
	JMP	ITAM1L
;
ITAACD:	STY	MAPBYT
	RTS
;
;
;COLOR
;
ITARC2:	LDY	#5
ITATMC:	LDA	[COLBP],Y
	STA	ITABUF+24,Y
	DEY
	BPL	ITATMC
;
	LDY	COLBYT
	COLSFT
	BCC	ITAEOJ
;
	LDX	#(256-6)
ITACS0:	COLSFT
	BCC	ITACS1
	LDA	#$01
ITACSL:	COLSFT
	ROL	A
	BCC	ITACSL
	STA	ITABUF+24-256+6,X
ITACS1:	INX
	BNE	ITACS0
ITAEOJ:	STY	COLBYT
	RTS
;
;INPUT A=PICTURE No.
;
NEWPIC:	STA	ITADAT
	ASL	A
	ADC	ITADAT	;CARRY = ALWAYS LOW
	ASL	A
	TAX
	LDA	ITAADT+0,X
	STA	CHRBP
	LDA	ITAADT+1,X
	STA	CHRBP+1
	LDA	ITAADT+2,X
	STA	MAPBP
	LDA	ITAADT+3,X
	STA	MAPBP+1
	LDA	ITAADT+4,X
	STA	COLBP
	LDA	ITAADT+5,X
	STA	COLBP+1
	LDA	#6
	STA	COLBYT
	LDA	#0
	STA	CHRBYT
	STA	CHRBIT
	STA	MAPBYT
	STA	MAPBIT
	STA	COLBIT
;
	LDX	#5
NEWP1:	STA	ITABUF+30,X
	DEX
	BPL	NEWP1
	LDA	#$0C
	STA	ITABUF+34
	RTS
;

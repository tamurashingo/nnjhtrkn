	lda	wrtptr
	and	#$20
	beq	colpsk
	ldy	#$27
colpsk:	sty	cstadr
;
	ldy	#256-6
clplop:
	lda	cstadr
	jsr	setadr
;
	lda	ITABUF+24-256+6,y	;[olpadr],y

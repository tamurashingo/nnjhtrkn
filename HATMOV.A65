;
RIGMAX	equ	$79
RIGPOS	equ	RIGMAX-1
;
;===================================================================
;
mandsp:	;hattori hyoji
;
	lda	mandir	;mizu & fall
	and	#$40
	bne	mcmnrt
	lda	clrflg	;meet shinzou
	bne	mand00
;
	lda	wrpflg
	bne	mandrg
;
	lda	mandir	;yarare
	and	#$80
	bne	mand00
;
	lda	mandir
	lsr	a
	bcc	mand00
	and	#1
	beq	mand00
